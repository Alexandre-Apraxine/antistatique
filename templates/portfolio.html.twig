{% extends "layout.html.twig" %}

{% block title %}{{ 'portfolio.title' | trans }}{% endblock %}

{% block body_class %}portfolio{% endblock %}

{% block baseline %}
<div class="baseline-space"></div>
<div class="page-title">
    <section>
        <h1 class="title-separation magenta-sep">
            <span></span>
            Portfolio
        </h1>
    </section>
</div>
{% endblock %}

{% block content %}
<div id="work">
    <h3 class="title-separation">
        <span></span>
        {{ 'homepage.work.title' | trans }}
    </h3>
    <div class="works">
        <a id="uchitomi" href="{{ path('portfolio_show', { slug: 'uchitomi' }) }}">
            <hgroup>
                <h3>{{ 'homepage.work.uchitomi.title' | trans }}</h3>
                <h5 class="title-separation x-long-sep magenta-sep">
                    <span></span>
                    {{ 'homepage.work.uchitomi.baseline' | trans }}
                </h5>
            </hgroup>
        </a>
        <a id="rdr" href="{{ path('portfolio_show', { slug: 'richter' }) }}">
            <hgroup>
                <h3>{{ 'homepage.work.rdr.title' | trans }}</h3>
                <h5 class="title-separation x-long-sep magenta-sep">
                    <span></span>
                    {{ 'homepage.work.rdr.baseline' | trans }}
                </h5>
            </hgroup>
        </a>
        <a id="tw" href="{{ path('portfolio_show', { slug: 'tehran' }) }}" class="last">
            <hgroup>
                <h3>{{ 'homepage.work.tehran.title' | trans }}</h3>
                <h5 class="title-separation x-long-sep magenta-sep">
                    <span></span>
                    {{ 'homepage.work.tehran.baseline' | trans }}
                </h5>
            </hgroup>
        </a>
    </div>
</div>


{% endblock %}