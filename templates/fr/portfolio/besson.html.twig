{% block next_link %}{{ path('portfolio_show', { slug: 'cardis' }) }}{% endblock %}

{% block baseline %}
<div class="baseline-space"></div>

{{ parent() }}

<div class="page-title title-image" style="background-image: url('/assets/img/besson-title.jpg')">
  <section>
    <h1 class="magenta-sep">
      <span></span>
        Besson Sécurité
    </h1>
  </section>
