{% block baseline %}
<div class="baseline-space"></div>

{{ parent() }}

<div class="page-title title-image" style="background-image: url('/assets/img/pierreetoile/pierre_etoile_title.jpg')">
  <section>
    <h1 class="magenta-sep">
      <span></span>
      Pierre Étoile
    </h1>
  </section>
