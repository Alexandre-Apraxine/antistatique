</head>
<body>

<!-- Navbar
    ================================================== -->
    <header class="navbar navbar-inverse navbar-fixed-top">
        <section class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="{{ path('homepage_i18n') }}"><img src="{{ app.request.basepath }}/assets/img/logo-antistatique.png" width="200" height="40"></a>

                <div class="nav-collapse collapse pull-right">
                    {% include '_menu.html.twig' %}
                </div>
            </div>
        </section>
    </header>

    <section id="content">
        {% block content %}{% endblock %}
    </section>

    <footer>
        <hr/>
        <section class="container">
            <div class="row-fluid">
                <div class="span6">
                    &copy; Antistatique – <a href="{{ path('contact') }}">Lausanne</a> – +41 21 623 63 03 – hello@antistatique.net
                </div>
                <div class="span6">
                    {% include '_menu.html.twig' %}
                </div>
            </div>
        </section>
    </footer>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ app.request.basepath }}/assets/js/jquery.min.js"><\/script>')</script>
    <script src="{{ app.request.basepath }}/assets/js/main.js"></script>
</body>
